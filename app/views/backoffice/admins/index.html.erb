<!-- Page Content -->
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Categorias</h1>
               
               <div class="panel panel-default">
                    <div class="panel-heading">
                        Listando Administradores
                        <%= link_to new_backoffice_admin_path, class: "btn btn-success btn-circle pull-right", style:"margin-top: -5px" do %>
                            <i class="fa fa-plus"></i>                           
                        <% end %>
                    </div>
                
				<table class="table table-striped table-bordered table-hover">
                    <thead>
                    	
                        <tr>
                            <th>Id</th>
                            <th>Nome</th>
                            <th>E-mail</th>
                            <th>Tipo de Acesso</th>
                           	<th></th>
                        </tr>
                    </thead>
                    <tbody>
                    	<% @admins.each do |admin| %>
                        <tr>
                            <td><%= admin.id %></td>
                            <td><%= admin.name %></td>
                            <td><%= admin.email %></td>
                            <td><%= admin.role_br %></td>
                            <td style="width: 81px">

                            <%= link_to edit_backoffice_admin_path(admin.id), class: "btn btn-primary btn-circle" do %>
                                <i class="fa fa-edit"></i>
                            <% end %>
                            <% if current_admin.id != admin.id %>
                                <%= link_to backoffice_admin_path(admin.id), method: :delete, class: "btn btn-danger btn-circle", data: {confirm: "VocÃª deseja realmente excluir o administrador <b>(#{admin.email})</b>?"} do %>
                                <i class="fa fa-minus"></i>
                                <% end %>
                               <% else %>
                                 <%= link_to '#', class: "btn btn-danger btn-circle", disabled: "disabled" do %>
                                <i class="fa fa-minus"></i>
                                <% end %> 
                            <% end %>
                            </td>
                         </tr>
                       <% end %>
                    </tbody>
                </table>

            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->

</div>
<!-- /#wrapper -->

<div class="container">
  <div class="row">
      <div class="col-md-4 col-md-offset-4">
          <div class="login-panel panel panel-default">
              <div class="panel-heading">
                  <h3 class="panel-title">Please Sign In</h3>
              </div>
              <div class="panel-body">
                  <%= form_for(resource, as: resource_name, url: session_path(resource_name, role: "form")) do |f| %>
                      <fieldset>
                          <div class="form-group">
                            
                              <%= f.label :email %><br />
                              <%= f.email_field :email, autofocus: true, class: "form-control", placeholder:"E-mail", type: "email" %>
                          </div>
                          <div class="form-group">
                              <%= f.password_field :password, class: "form-control", autocomplete: "off", placeholder: "Password", type:"password", value: "" %>
                          </div>
                          <div class="checkbox">
                              <label>
                                 <%= f.check_box :remember_me %>
                                 <%= f.label :remember_me %>
                              </label>
                          </div>
                          <%= f.submit "Log in", class: "btn btn-lg btn-success btn-block" %>
                          <%= render "admins/shared/links" %>
                      </fieldset>
                  <% end %>
              </div>
          </div>
      </div>
  </div>
</div>

